{
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/jungaretti/features/vim": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:latest": {
      "installOhMyZsh": true, // For more defailts: https://github.com/devcontainers/features/issues/1035.
      "installOhMyZshConfig": true,
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainer-community/devcontainer-features/btop:1": {},
    "ghcr.io/wxw-matt/devcontainer-features/apt:latest": {
      "packages": "vim htop curl wget software-properties-common inetutils-ping dnsutils ncat bat nmap"
    }
  },
  "customizations": {
  "vscode": {
    "settings": {
      "workbench": {
        "iconTheme": "atom-material-icons",
        "productIconTheme": "atom-material-icons",
        "theme": "amoled-github-theme"
      },
      "editor": {
        "formatOnSave": true,
        "quickSuggestions": {
          "strings": "on"
        }
      }
    },
  "extensions": [
          "alphabotsec.vscode-eclipse-keybinding",
          "emeraldwalk.RunOnSave",
          "ms-vscode.live-server",
          "waderyan.gitblame",
          "codeium.codeium",
          "atommaterial.a-file-icon-vscode",
          "t3m1n4l.amoled-github",
          "github.remotehub",
          "ms-kubernetes-tools.vscode-kubernetes-tools",
          "ms-azuretools.vscode-containers",
          "donjayamanne.git-extension-pack"
        ]
    }
  }
}
